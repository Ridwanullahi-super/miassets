          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Add-new Reters -->
            <p>Add new Renters in to the system by filling these below Details</p>
            <div class="card">
              
                <div class="card-body rounded">
                  <form action="" method="POST">
                    <div class="container">
                      <div class="row">
                        <div class="col-md-4 col-sm-6">
                          <div class="mt-1">
                            <label for="" class="form-label" ><b>Surname</b> </label>
                            <input type="text"
                              class="form-control"  id="" aria-describedby="helpId" placeholder="Enter your surname here" name="surname">
                          </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                          <div class="mt-1">
                            <label for="" class="form-label"><b>Firstname</b> </label>
                            <input type="text"
                              class="form-control"  id="" aria-describedby="helpId" placeholder="Enter your firstname here" name="first_name">
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="mt-1">
                            <label for="" class="form-label"><b>Othername</b> </label>
                            <input type="text"
                              class="form-control"  id="" aria-describedby="helpId" placeholder="Enter your othername here" name="other_name">
                          </div>
                        </div>
                        
                      </div> <br>
                      <div class="row">
                        <div class="col-md-4 col-sm-6">
                          <div class="mt-1">
                            <label for="" class="form-label"><b>Phone Number</b> </label>
                            <input type="number"
                              class="form-control"  id="" aria-describedby="helpId" placeholder="" name="phone_number">
                          </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                          <div class="mt-1">
                            <label for="" class="form-label"><b>email</b> </label>
                            <input type="text"
                              class="form-control"  id="" aria-describedby="helpId" placeholder="" name="email">
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="mt-1">
                            <label for="" class="form-label"><b>Address</b> </label>
                            <input type="text"
                              class="form-control"  id="" aria-describedby="helpId" placeholder="" name="address">
                          </div>
                        </div>
                      </div> <br>
                      <div class="row">
                        <div class="col-md-4 col-sm-6">
                          <div class="mt-1">
                            <label for="" class="form-label"><b>Rent Time</b> </label>
                            <input type="date"
                              class="form-control"  id="" aria-describedby="helpId" placeholder="" name="rent_time">
                          </div>
                          
                          </div>
                        
                        <div class="col-md-4 col-sm-6">
                          <div class="mt-1">
                            <label for="" class="form-label"><b>Due Time</b> </label>
                            <input type="date"
                              class="form-control"  id="" aria-describedby="helpId" placeholder="" name="due_time">
                          </div>
                         
                        </div> <br>
                        <div class="col-md-4 col-sm-6">
                          <div class="mt-1">
                            <label for="" class="form-label"><b> Asset Rent</b></label>
                            <select class="form-select form-select-lg"  id="" name="fixed_asset_id">
                            <% for( let asset of Assets ) { %>
                                  <option selected  value="<%- asset.id %>" name="fixed_asset_id"><%= asset.name%></option>
                                
                                  
                                  <% } %>
                                </select>
                            </div>
                        </div> <br>
                        <button class="btn btn-sm w-25 mx-auto h-50 btn-primary " type="submit" role="button"> Add Renter</button>
