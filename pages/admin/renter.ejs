        <div class="container-fluid">
          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Renters</h1>
          <p class="mb-4">
            These are the details of renters of your assets are describes below, <br>
            <a target="_blank" href="">See available Assets</a>.
          </p>

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">
                Available Renters
              </h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th></th>
                      <th>Name</th>
                      <th>Amount</th>
                      <th>Rent time</th>
                      <th>Due time</th>
                      <th>Address</th>
                      <th>Assets name</th>
                      <th>Payment Status</th>
                 
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th></th>
                      <th>Name</th>
                      <th>Amount</th>
                      <th>Rent time</th>
                      <th>Due time</th>
                      <th>Address</th>
                      <th>Assets name</th>
                      <th>Payment Status</th>
              
                    </tr>
                  </tfoot>
                  <tbody>
                    <% for( let renter of renters) { %>
                      <tr name="<%- renter.user_id %>">
                        <td title="Delete renter"><a  class="icon" data-bs-toggle="modal" data-bs-target="#DeleteRenter"><i class="fa-solid fa-trash"></i></a>
                        </td>
                        <td>
                          <%=`${renter.user.surname? renter.user.surname.slice(0,1).toUpperCase()+renter.user.surname.slice(1).toLowerCase() :""}
                            ${ renter.user.first_name? renter.user.first_name.slice(0,1).toUpperCase()+renter.user.first_name.slice(1).toLowerCase() :""}
                            ${renter.user.other_name? renter.user.other_name.slice(0,1).toUpperCase()+renter.user.other_name.slice(1).toLowerCase() :""}` %>
                        </td>
                        <td><%- renter.amount? renter.amount :'' %></td>
                        <td><%= new Date(`${renter.rent_time}`).toDateString() %></td>
                        <td><%= new Date(`${renter.due_time}`).toDateString() %></td>
                        <td><%-renter.user.address %></td>
                        <td><%-renter.asset.name %></td>
                        <td><%-renter.payment_status? "paid":"Outstanding"%></td>
                        

                        <div class="modal fade" id="DeleteRenter" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Delete Renter</h5>
                              <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                              </button>
                            </div>
                            <div class="modal-body">
                              are you sure you want to delete <%= renter.user.surname.toUpperCase()+ " " + renter.user.first_name.toUpperCase() %>
                            </div>
                            <div class="modal-footer">
                              <a class="btn btn-primary" href="/admin/renter/delete/<%= renter.id %>" type="button" >
                             Yes
                            </a>
                              <a class="btn btn-secondary" data-dismiss="modal">No</a>
                            </div>
                          </div>
                        </div>
                      </div>
                        <% } %>



                      </tr>

                      <div class="modal fade " id="editModal" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header" style=" background-color: purple; color:aliceblue">
                              <h5 class="modal-title" id="exampleModalLabel">Edit Renter information </h5>
                              <button class="close" type="button" data-bs-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true" class="text-white">×</span>
                              </button>
                            </div>
                            <div class="modal-body">
                              <div>
                              <form method="POST" id="FormEdit">
                                <div class="row">
                                  <div class="col-md-6 col-sm-6">
                                    <div class="mt-1">
                                      <label for="" class="form-label"><b>Surname</b> </label>
                                      <input type="text" id="surname" class="form-control" aria-describedby="helpId"
                                        placeholder="Enter your surname here" name="surname">
                                    </div>
                                  </div><br>

                                  <div class="col-md-6 col-sm-6">
                                    <div class="mt-1">
                                      <label for="" class="form-label"><b>Firstname</b> </label>
                                      <input type="text" id="first_name" class="form-control" 
                                        aria-describedby="helpId" placeholder="Enter your firstname here"
                                        name="first_name">
                                    </div>
                                  </div>
                                </div>
                                <div class="row"> 
                                  <div class="col-md-6 col-sm-6">
                                    <div class="mt-1">
                                      <label for="" class="form-label"><b>Othername</b> </label>
                                      <input type="text" class="form-control" id="other_name" aria-describedby="helpId"
                                        placeholder="Enter your othername here" name="other_name">
                                    </div>
                                  </div>
                                  <div class="col-md-6 col-sm-6">
                                    <div class="mt-1">
                                      <label for="" class="form-label"><b>Phone Number</b> </label>
                                      <input type="number" class="form-control"  aria-describedby="helpId"
                                        placeholder="" name="phone_number" id="phone_number">
                                    </div>
                                  </div>
                                </div>
                                <div class="row"> 
                                  <div class="col-md-6 col-sm-6">
                                    <div class="mt-1">
                                      <label for="" class="form-label"><b>email</b> </label>
                                      <input type="text" class="form-control"  aria-describedby="helpId"
                                        placeholder="" name="email" id="email">
                                    </div>
                                  </div>
                                  <div class="col-md-6 col-sm-6">
                                    <div class="mt-1">
                                      <label for="" class="form-label"><b>Address</b> </label>
                                      <input type="text" class="form-control"  aria-describedby="helpId"
                                        placeholder="" name="address" id="address">
                                    </div>
                                  </div>
                                </div>
                                <div class="row">
                                  <div class="col-md-4 col-sm-4"> 
                                    <div class="mt-1">
                                      <label for="" class="form-label"><b>Rent Time</b> </label>
                                      <input type="date" class="form-control"  aria-describedby="helpId"
                                        placeholder="" name="rent_time" id="rent_time">
                                    </div>
                                  </div>
                                  <div class="col-md-4 col-sm-4">
                                    <div class="mt-1">
                                      <label for="" class="form-label"><b>Due Time</b> </label>
                                      <input type="date" class="form-control"  aria-describedby="helpId"
                                        placeholder="" name="due_time" id="due_time">
                                    </div>
                                  </div> <br>
                                  <div class="col-md-4 col-sm-4">
                                    <div class="mt-1">
                                      <label for="" class="form-label"><b> Asset Rent</b></label>
                                      <select class="form-select form-select-lg"  name="fixed_asset_id" id="asset">
                                        <% for( let asset of assets) { %>
                                          <option value="<%- asset.id %>" id="asset"><%- asset.name %></option>
                                        <% } %>
                                      </select>
                                    </div>
                                  </div>
                                </div> <br>
                                <center>
                                  <button class="btn btn-sm w-25 mx-auto h-50 btn-primary " type="submit" role="button">
                                    Update Renter</button>
                                </center>
                                
                              </form>
                              </div>
                              </div>
                            <div class="modal-footer" style="background-color: purple;">
                            </div>
                          </div>
                        </div>
                      </div>
                  </tbody>
                </table>
              </div>
            </div>
